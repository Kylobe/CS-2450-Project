<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:storage="clr-namespace:Microsoft.Maui.Storage;assembly=Microsoft.Maui.Essentials"
             x:Class="UVSimGUI.MainPage">

    <ScrollView>
        <Grid RowDefinitions="Auto, *" ColumnDefinitions="*">
            <!-- Header with buttons -->
            <HorizontalStackLayout Grid.Row="0" Grid.Column="0"
                                   HorizontalOptions="Center"
                                   Spacing="20"
                                   Padding="10">
                <Button x:Name="LoadButton" Text="Load" Clicked="OnLoadClicked" WidthRequest="80" />
                <Button x:Name="WriteButton" Text="Write" Clicked="OnWriteClicked" WidthRequest="80" />
                <Button x:Name="CompileButton" Text="Compile" Clicked="OnCompileClicked" WidthRequest="80" />
                <Button x:Name="RunButton" Text="Run" Clicked="OnRunClicked" WidthRequest="80" />
            </HorizontalStackLayout>

            <!-- Main content area -->
            <Grid Grid.Row="1" Grid.Column="0" ColumnDefinitions="*, *" RowDefinitions="*">
                <!-- Left side (two stacked scrollable sections) -->
                <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="10" Margin="5">
                    <!-- First scrollable section -->
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="{StaticResource Secondary}">
                        <ScrollView x:Name="MainScrollView">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Instructions" FontAttributes="Bold" FontSize="16" />
                                <Grid ColumnDefinitions="Auto,*" HeightRequest="400">
                                    <!-- Line Numbers (Left) - Synchronized Scrolling -->
                                    <ScrollView 
                                        x:Name="LineNumberScrollView"
                                        Grid.Column="0"
                                        VerticalScrollBarVisibility="Never"
                                        Orientation="Vertical">
                                        <Label
                                            x:Name="LineNumberLabel"
                                            FontFamily="Courier New"
                                            FontSize="14"
                                            TextColor="Gray"
                                            Text="1"
                                            VerticalOptions="Start"/>
                                    </ScrollView>

                                    <!-- Editor (Right) - Main Scrolling Control -->
                                    <ScrollView 
                                        x:Name="EditorScrollView"
                                        Grid.Column="1"
                                        Orientation="Both"
                                        HorizontalScrollBarVisibility="Always"
                                        VerticalScrollBarVisibility="Always">
                                        <Editor 
                                            x:Name="InstructionsEditor"
                                            FontFamily="Courier New"
                                            FontSize="14"
                                            Margin="0,-9,0,-9"
                                            Placeholder="Enter your instructions here..."
                                            AutoSize="TextChanges"
                                            TextChanged="OnEditorChanged"/>
                                    </ScrollView>
                                </Grid>
                            </VerticalStackLayout>
                        </ScrollView>
                    </Frame>

                    <!-- Second scrollable section -->
                    <Frame CornerRadius="10" Padding="10" BackgroundColor="{StaticResource Tertiary}"
                           BindingContext="{Binding MockConsole}">
                        <ScrollView x:Name="ConsoleScrollView">
                            <VerticalStackLayout Spacing="10" x:Name="MockConsole">
                                <Label Text="Console" FontAttributes="Bold" FontSize="16" />
                            </VerticalStackLayout>
                        </ScrollView>
                    </Frame>
                </VerticalStackLayout>

                <!-- Right side section -->
                <Frame Grid.Column="1" Grid.Row="0" CornerRadius="10" Padding="0" Margin="5"
                       BackgroundColor="Plum" BorderColor="#EEEEEE">
                    <Grid>
                        <CollectionView x:Name="FileExplorerView"
                                        ItemsSource="{Binding Files}"
                                        SelectionMode="None"
                                        BackgroundColor="White">

                            <!-- Header -->
                            <CollectionView.Header>
                                <Grid BackgroundColor="#512BD4" Padding="15">
                                    <Label Text="FILE EXPLORER"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           HorizontalOptions="Start" />
                                </Grid>
                            </CollectionView.Header>

                            <!-- Item Template -->
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Padding="5">
                                        <Label Text="{Binding FileName}" FontSize="14" TextColor="Black" />
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                            <!-- Footer -->
                            <CollectionView.Footer>
                                <BoxView HeightRequest="1" Color="Transparent" />
                            </CollectionView.Footer>
                        </CollectionView>
                    </Grid>
                </Frame>
            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>